<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherited" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.timesheet.lock</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_timesheet.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='time_unit_timesheets_setting']" position="inside">
                <div>
                    <label for="timesheet_lock"/>
                    <field name="timesheet_lock"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>