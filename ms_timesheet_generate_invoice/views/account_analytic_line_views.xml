<odoo>
    <data>

        <record id="hr_timesheet_line_tree" model="ir.ui.view">
            <field name="name">account.analytic.line.tree</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='unit_amount']" position="after">
                    <field name="amount" sum="Total Amount" groups="hr_timesheet.group_timesheet_manager"/>
                </xpath>

            </field>
        </record>

        <record id="model_account_analytic_line_generate_invoice" model="ir.actions.server">
            <field name="name">Generate Invoice</field>
            <field name="model_id" ref="analytic.model_account_analytic_line"/>
            <field name="binding_model_id" ref="analytic.model_account_analytic_line"/>
            <field name="state">code</field>
            <field name="code">action = records.action_generate_invoice()</field>
        </record>

    </data>
</odoo>